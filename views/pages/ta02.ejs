<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1>
          <%= title %>
        </h1>
      </div>
    </div>
    <div class="container">
      <h2>Add a User</h2>
      <form action="/ta02/addUser" method="POST">
        <label for="newUser">Enter a User Name</label>
        <input type="text" name="newUser">
        <button type="submit">Add User</button>
      </form>
    </div>
    <div class="container">
      <h2>Delete a User</h2>
      <form action="/ta02/removeUser" method="POST">
        <label for="removeUser">Enter a User Name</label>
        <input type="text" name="removeUser">
        <button type="submit">Remove User</button>
      </form>
    </div>
    <div class="container">
      <% for (user of users) { %>
        <p><%= user %></p>
      <% } %>
    </div>
</body>

</html>